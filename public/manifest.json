{
    "manifest_version": 3,
    "name": "Timezone Buddy",
    "version": "1.0",
    "description": "",
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icons/icon.png"
        }
    },
    "permissions": [
        "scripting",
        "tabs",
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*",
        "file:///*"
    ],
    "icons": {
        "16": "icons/icon.png"
    }
}